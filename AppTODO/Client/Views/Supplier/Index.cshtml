
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Main/_LayoutTransaction.cshtml";
}

<html>
<head>
    <style>
        table {
            border-collapse: collapse;
            border-spacing: 0;
            width: 100%;
            border: 1px solid #ddd;
        }

        th, td {
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2
        }

        a.disabled {
            pointer-events: none;
            cursor: default;
        }
    </style>
</head>
<body>
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">ToDo List</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">ToDo</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <div class="row">
        <div class="container-fluid">

            <div class="card">
                <div class="card-body">
                    <p>
                        <!-- Trigger the modal with a button -->
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="clearTextBox()"><i class="fas fa-plus"></i></button>
                    </p>
                    <select id="status">
                        <option value="3">All</option>
                        <option value="1">Complete</option>
                        <option value="0">Active</option>
                    </select>
                    <div class="table-responsive">
                        <table id="tableToDolist" class="table table-striped table-bordered dt-responsive nowrap" style="overflow-x:auto;">
                            <thead>
                                <tr>
                                    <th style="background-color:darkcyan">Check</th>
                                    <th style="background-color:darkcyan">
                                        To Do List All
                                    </th>
                                    <th style="background-color:darkcyan">Status</th>
                                    <th style="background-color:darkcyan">Create Date</th>
                                    <th style="background-color:darkcyan">Action</th>
                                </tr>
                            </thead>
                            <tbody class="todoListTable"></tbody>
                        </table>
                    </div>
                </div>
                <div class="container">
                    <!-- Modal -->
                    <div class="modal fade" id="myModal" role="dialog">
                        <div class="modal-dialog">
                            <!-- Modal content-->
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4 class="modal-title">Add New ToDo List</h4>
                                </div>
                                <div class="modal-body">
                                    <div class="container">
                                        <form>
                                            <div class="form-group" hidden="hidden">
                                                <label for="Id">Id:</label>
                                                <input type="text" class="form-control" id="Id" placeholder="Enter Id" name="Id">
                                            </div>
                                            <div class="form-group">
                                                <label for="ToDo">ToDo:</label>
                                                <input type="text" class="form-control" id="ToDo" placeholder="ToDo" name="ToDo">
                                            </div>
                                            <div class="form-group" hidden="hidden">
                                                <label for="Username">Username:</label>
                                                <select id="Username" class="pc form-control" name="Username"> </select>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" id="submit" class="btn btn-primary" onclick="Create();">Submit</button>
                                    <button type="button" id="close" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <button type="button" id="update" class="btn btn-primary" data-dismiss="modal" onclick="Update();">Update</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>



            </div>
        </div>
    </div>
    <script src="~/dashboard/plugins/moment/moment-with-locales.min.js"></script>
    <style>
        .btn {
            background-color: #44e5b9;
            border-color: #44e5b9;
            color: #ffffff;
        }
    </style>
</body>
</html>
@section Scripts {
    <!-- Bootstrap 4 -->
    <script src="~/dashboard/plugins/moment/moment-with-locales.min.js"></script>
    <script src="~/dashboard/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- DataTables -->
    <script src="~/dashboard/plugins/datatables/media/js/jquery.dataTables.js"></script>
    <script src="~/dashboard/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>
    <!-- AdminLTE App -->
    <script src="~/dashboard/dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/dashboard/dist/js/demo.js"></script>
    <script src="~/dashboard/plugins/moment/moment.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
    <script src="~/scripts/todolistScript/todolistScript.js"></script>
}
